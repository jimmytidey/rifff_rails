{"soundfiles":
    [
    <% 
    last = @sound_files.pop
    if (last) 
        @sound_files.each do |sound_file| %>
         {
            "location": "<%= sound_file.url %>"
         },
        <% end %>
        {
            "location": "<%= last.url %>"       
        }
    <% else %> 
        {}
    <% end %>    
    ]
}